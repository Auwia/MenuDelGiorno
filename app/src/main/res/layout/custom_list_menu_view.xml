<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TableRow
        android:id="@+id/customRiga1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nomeMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:paddingTop="6dip"
            android:textColor="#43bd00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prezzoMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="30"
            android:gravity="right"
            android:paddingBottom="2dip"
            android:paddingTop="6dip"
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/simboloEuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:paddingRight="5dip"
            android:paddingTop="6dip"
            android:text="@string/simboloEuro"
            android:textColor="#43bd00"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/customRiga2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nomeLocale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="34"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:textColor="#acacac" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/kmMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingBottom="2dip"
                android:textColor="#acacac" />

            <TextView
                android:id="@+id/labelKMOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelKMOnly" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/valutazioneMenu"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="0.1" />
        </LinearLayout>

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </TableRow>

</TableLayout>